---
import Nav from './Nav.astro';
import Footer from './Footer.astro';

export interface Props {
  title: string;
  description: string;
  tag: string;
}

const { title, description, tag } = Astro.props as Props;
---

<div>
  <div class="ml-[auto] mr-[auto] w-full max-w-[65em] pl-[2rem] pr-[2rem]">
    <Nav />
  </div>
  <div class="text-center">
    Title:{title} - Tag:{tag} - Description:{description}
  </div>
  <div class="ml-[auto] mr-[auto] w-full max-w-[65em] pl-[2rem] pr-[2rem]">
    <script
      src="https://product-gallery.cloudinary.com/all.js"
      type="text/javascript"
      is:inline
    ></script>
    <div id="my-gallery" style="max-width:80%;margin:auto"></div>

    <script type="text/javascript">
      const myGallery = cloudinary.galleryWidget({
        container: '#my-gallery',
        cloudName: 'chipchop',
        mediaAssets: [{ tag: 'test', mediaType: 'image' }],
      });

      myGallery.render();
    </script>
    <Footer />
  </div>
</div>
